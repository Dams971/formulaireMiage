{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title 'Bienvenue sur votre Tableau de bord' %}

{% block main %}
<div class="content">

    <div class="container">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">{{ app.user.nom}} {{ app.user.prenom}}</li>
        </ol>
        <!-- Icon Cards-->
    </div>

    <div class="container">
        <div class="row">
            <h1> Tableau de bord </h1>
        </div>
        <div class="row mt-3">
            <div class="col-6 alert-success">
                <span class="display-3"> {{ countAllUser['value'] }} </span> Utilisateurs
            </div>
            <div class="col-6 alert-dark">
                <span class="display-3"> {{ countAllFormulaires['value'] }} </span> Formulaires
            </div>
        </div>

{% endblock %}
